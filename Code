        Scanner input = new Scanner(new File(filename)); 
        PrintStream out = new PrintStream(new File(replace(fileName, + "_OUT.txt"));
        while (input.hasNextLine()) {
            String line = input.nextLine();
            int width = input.nextInt(); 
            showWidth (width);
        } 
    }
    
    public static void showWidth (int width) {
        for (int i = 1; i <= width; i++) {
            System.out.print (i/10);
        }
        System.out.println();
        for (int i = 1; i <= width; i++) {
            System.out.print (i%10);
        }
        System.out.println();
        for (int i = 1; i<= width; i++) {
            System.out.print ("-");
        }
    }

    public static int getWidth(String line) {
        Scanner findWidth = new Scanner(line);
        int width = findWidth.nextInt();
        return width;
    }

    public static void consoleOutput (boolean passedTest) {
        if (passedTest){
            System.out.print ("The maximum output file line length is CORRECT.");
        }
        else {
            System.out.print ("The maximum output file line length is INCORRECT!!!");
        }
    }
}

